extends ../layout.pug
block content
    h1 #{title}
    div.collection
        - var published = '/radar/publications/' + results[0].publisher + '/' + results[0].date +'/published';
        a(href=published).collection-item Blips Published to this publication
        - var contributed = '/radar/publications/' + results[0].publisher + '/' + results[0].date +'/contributed';
        a(href=contributed).collection-item Meetings Contributing to this publication
        - var radar = '/radar/visualization/?sheetId=publications%2F'+results[0].publisher+'%2F'+results[0].date + '%2Fpublished';
        a(href=radar).collection-item Interactive Radar Visualization
